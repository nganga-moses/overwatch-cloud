# Overwatch Cloud — Environment Configuration
# Copy to .env and fill in your values.

# Database (PostgreSQL + pgvector)
DATABASE_URL=postgresql://overwatch:overwatch@localhost:5432/overwatch_cloud

# API key hashing secret (used as pepper for API key hashes)
API_KEY_PEPPER=change-me-to-a-random-secret

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:5174"]

# Blob storage (S3-compatible — AWS S3, GCS, or MinIO for dev)
BLOB_STORAGE_ENDPOINT=http://localhost:9000
BLOB_STORAGE_ACCESS_KEY=minioadmin
BLOB_STORAGE_SECRET_KEY=minioadmin
BLOB_STORAGE_BUCKET=overwatch-blobs
BLOB_STORAGE_REGION=us-east-1
BLOB_PRESIGN_EXPIRY_SECONDS=900
